{% include 'base.html.twig' %}

{% block body %}
    <div class="cards-container">
    {% for ingredient in ingredients %}
        <div class="card">
            <h2>{{ ingredient.name }}</h2>
            <h2>{{ ingredient.allergene }}</h2>
            <img src="{{ asset('assets/upload_directory/' ~ ingredient.image) }}" alt="{{ ingredient.name }}">
        </div>
    {% endfor %}
    </div>
{% endblock %}
