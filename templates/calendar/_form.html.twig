
{% block main %}
<h1 class="title top">Sélectionnez une date</h1>

{{ form_start(form) }}

    <div class="errorResa title">
        {{ form_errors(form.start) }}
    </div>

    <div class="spacing ">
        {{ form_label(form.title) }}
    </div>

    <div class="inputSpacing">
        {{ form_widget(form.title) }}
    </div>

    <div class="spacing">
        {{ form_label(form.start) }}
    </div>
    <div class="inputSpacing">
        {{ form_widget(form.start) }}
    </div>

    <div class="spacing">
        {{ form_label(form.description) }}
    </div>
    <div class="inputSpacing">
        {{ form_widget(form.description) }}
    </div>

<button type="submit" class="button">{{ button_label|default('Réserver') }}</button>
{{ form_end(form) }}
{% endblock %}
