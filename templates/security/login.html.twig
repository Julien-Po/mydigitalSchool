{% block title %}Connexion{% endblock %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('app_connexion') }}" method="post">

    <div>
        <label for="username">Adresse email</label>
        <input type="email" id="username" name="_username" placeholder="exemple@gmail.com" value="{{ last_username }}" required>
    </div>

    <div>
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" placeholder="*******" required>
    </div>

    <button type="submit">Se connecter</button>

</form>

{% endblock %}
